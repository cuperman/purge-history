{
  "manifest_version": 2,
  "name": "Purge History",
  "version": "0.1",

/*  "default_locale": "en",*/
  "description": "Purge your history of an entire domain",
  "icons": {
    "16":  "/src/img/remove-icon-black-16.png",
    "32":  "/src/img/remove-icon-black-32.png",
    "64":  "/src/img/remove-icon-black-64.png",
    "128": "/src/img/remove-icon-black-128.png"
  },

  "browser_action": {
    "default_icon": {
      "16":  "/src/img/remove-icon-black-16.png",
      "32":  "/src/img/remove-icon-black-32.png",
      "64":  "/src/img/remove-icon-black-64.png",
      "128": "/src/img/remove-icon-black-128.png"
    },
    "default_title": "Let's Purge!",
    "default_popup": "/src/popup.html"
  },

  "permissions": [
    "history"
  ]
}
